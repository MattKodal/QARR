{% import "_includes/forms" as forms %}

<div class="field">
    <div class="heading">
        <label for="{{ id }}">{{ 'Type'|t('qarr') }}</label>
    </div>
    <div class="input ltr">
        <div class="select">
            <select name="type" id="{{ id }}">
                <option value="reviews" {% if widget.type == 'reviews' %} selected{% endif %}>Rating & Reviews</option>
                <option value="questions" {% if widget.type == 'questions' %} selected{% endif %}>Question & Answers</option>
            </select>
        </div>

    </div>
</div>