<div class="block-field answer-item {{ answer.status }}" id="answer-item-{{ answer.id }}" data-parent-id="{{ entry.id }}" data-id="{{ answer.id }}" data-status="{{ answer.status }}">
    <div class="text-xs opacity-50 mb-2">{{ 'Answered by'|t('qarr') }} {{ answer.author.friendlyName }} - {{ answer.dateCreated |date() }} {% if answer.anonymous %}({{ 'Requested to post anonymously'|t('qarr') }}){% endif %}</div>

    <div class="answer-status flex-container items-center text-xs font-semibold tracking-wider uppercase {{ answer.status }}">{% if answer.status == 'pending' %}<div class="pulse round {{ answer.status }} mr-2"></div> {% endif %}{{ answer.status }}</div>

    <div class="response-meta">
        {% if answer.anonymous %}
            <span class="response-icon tippy" data-tippy-content="Posted as anonymous"><i class="fal fa-user-shield"></i></span>
        {% endif %}
        {% if answer.abuse %}
            <span class="response-icon tippy" data-tippy-content="Abuse reported"><i class="fal fa-times-hexagon"></i></span>
        {% endif %}
        {% if answer.isHelpful %}
            <span class="response-icon tippy" data-tippy-content="Marked as helpful"><i class="fal fa-trophy"></i></span>
        {% endif %}
    </div>

    <div class="large-text">{{ answer.answer }}</div>

    <div class="block-actions flex-container mt-2 opacity-25">
        <button class="action-btn action-approve text-indigo-400 hover:text-green-600 text-xs flex-container items-center mr-4" data-type="reviews" data-status="approved" data-action-type="status" data-element-id="1590">
            <svg xmlns="http://www.w3.org/2000/svg" class="align-middle fill-current mr-2" width="14" height="14" viewBox="0 0 20 20"><path d="M11 0h1v3l3 7v8a2 2 0 0 1-2 2H5c-1.1 0-2.31-.84-2.7-1.88L0 12v-2a2 2 0 0 1 2-2h7V2a2 2 0 0 1 2-2zm6 10h3v10h-3V10z"></path></svg>
            Approve
        </button>

        <button class="action-btn action-reject text-indigo-400 hover:text-red-600 text-xs flex-container items-center" data-type="reviews" data-status="rejected" data-action-type="status" data-element-id="1590">
            <svg xmlns="http://www.w3.org/2000/svg" class="align-middle fill-current mr-2" width="14" height="14" viewBox="0 0 20 20"><path d="M11 20a2 2 0 0 1-2-2v-6H2a2 2 0 0 1-2-2V8l2.3-6.12A3.11 3.11 0 0 1 5 0h8a2 2 0 0 1 2 2v8l-3 7v3h-1zm6-10V0h3v10h-3z"></path></svg>
            Reject
        </button>

        <button class="action-btn action-delete text-gray-300 hover:text-red-600 text-xs ml-auto" data-type="reviews" data-action-type="delete" data-element-id="1590">
            Delete
        </button>
    </div>
</div>