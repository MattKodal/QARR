{% requirePermission 'qarr:accessCampaigns' %}

{% extends craft.craftify ? 'qarr/_layouts/cp-static-craft' : 'qarr/_layouts/cp-static-craft' %}

{% set title = "Campaigns"|t('qarr') %}
{% set selectedSubnavItem = "campaigns" %}
{% set selectedSidebarItem = "campaigns" %}

{% block header %}
    {% if not craft.craftify %}
        {% include 'qarr/_layouts/header-qarr' ignore missing %}
    {% endif %}
    {{ parent() }}
{% endblock %}

{% block actionButton %}
    <a href="{{ url('qarr/campaigns/new') }}" class="btn submit add icon disabled">{{ "New Campaign"|t('qarr') }}</a>
{% endblock %}

{% block sidebar %}
    {% include 'qarr/campaigns/_includes/sidebar' ignore missing %}
{% endblock %}

{% block content %}
    <p id="noelements">{{ "No campaigns exist yet."|t('qarr') }}</p>
{% endblock %}